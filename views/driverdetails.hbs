<!DOCTYPE html>
<html lang="en">
  <head>
    <title>User Details</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.min.js"
      integrity="sha384-Atwg2Pkwv9vp0ygtn1JAojH0nYbwNJLPhwyoVbhoPwBhjQPR5VtM2+xf0Uwh9KtT"
      crossorigin="anonymous"
    ></script>
    <link href="css/userdetails.css" rel="stylesheet" />
  </head>
  <body>
    <h1>Update Details</h1>
    <form class="update" method="POST" action="/driverDetail" novalidate>
      <select class="form-select option1" aria-label="Default select example"
      name="updateDriverCard">
        <option selected>Select detail to edit</option>
        <option value="1">Name</option>
        <option value="2">Mobile no</option>
        <option value="3">Email</option>
        <option value="4">Password</option>
        <option value="5">Taxi no</option>
        <option value="6">taxi type</option>
        <option value="7">taxi model</option>
      </select>
      <br />
      <br />
      <div class="form-outline mb-4 option1">
        <label class="form-label" for="new value ">Enter new Value : </label>
        <input id="new value " class="form-control form-control-lg option1" name="newValue" />
      </div>
      <br /><br />
      <button class="btn btn-primary btn-lg btn-success option1 btnn">
        Update
      </button>
    </form>
    <br />
    <br />
    <br />
    <div class="half lefthalf">
      <label class="form-label" for="profileid">Driver ID : </label>
      <input
        id="profileid"
        class="form-control"
        type="text"
        placeholder={{this.id}}
        readonly
      />
      <label class="form-label" for="name">Name : </label>
      <input
        id="name"
        class="form-control"
        type="text"
        placeholder={{this.name}}
        readonly
      />
      <label class="form-label" for="mobileno">Mobile no : </label>
      <input
        id="mobileno"
        class="form-control"
        type="text"
        placeholder={{this.mobileNo}}
        readonly
      />

      <label class="form-label" for="taximodel">Taxi model : </label>
      <input
        id="taximodel"
        class="form-control"
        type="text"
        placeholder={{this.carModel}}
        readonly
      />
      <label class="form-label" for="driverlicense">Driver license : </label>
      <input
        id="driverlicense"
        class="form-control"
        type="text"
        placeholder={{this.licenseNo}}
        readonly
      />
    </div>
    <div class="half">
      <label class="form-label" for="email">Email : </label>
      <input
        id="email"
        class="form-control"
        type="text"
        placeholder={{this.email}}
        readonly
      />
      <label class="form-label" for="pwd">Password : </label>
      <input
        id="pwd"
        class="form-control"
        type="password"
        placeholder={{this.password}}
        readonly
      />
      <label class="form-label" for="taxino">Taxi no : </label>
      <input
        id="taxino"
        class="form-control"
        type="text"
        placeholder={{this.taxiNo}}
        readonly
      />
      <label class="form-label" for="taxitype">Taxi type : </label>
      <input
        id="taxitype"
        class="form-control"
        type="text"
        placeholder={{this.carType}}
        readonly
      />
      <label class="form-label" for="rating">rating : </label>
      <input
        id="rating"
        class="form-control"
        type="text"
        placeholder={{this.rating}}
        readonly
      />
    </div>
  </body>
</html>